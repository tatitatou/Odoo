<odoo>
    <data>
        <!-- Groupe utilisateur du module Rentcars -->
        <record id="rentcars_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_inventory_cars"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Groupe Manager du module Rentcars -->
        <record id="rentcars_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_inventory_cars"/>
            <field name="implied_ids" eval="[(4, ref('base.rentcars_group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))
                                        (4, ref('base.user_admin'))]"></field>
        </record>
    </data>
</odoo>