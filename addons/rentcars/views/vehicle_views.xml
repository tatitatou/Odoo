<odoo>
    <record id="view_form_vehicle" model="ir.ui.view">
        <field name="name">Vehicle form</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
            <form string="vehicle">
                <header>
                    <button name="button_check_immatriculation" type="object"
                        string="Check immatriculation"></button>
                </header>
                <sheet>
                    <group name="group_line_1">
                        <group name="group_column_left">
                            <field name="model"/>
                            <field name="active"/>
                            <field name="date_purchased"/>
                            <field name="age_vehicle"/>
                            <field name="immatriculation" invisible='state != "usable"'/>
                            <field name="option_ids" widget="many2many_chehkboxes" readonly="['|', 
                                                                                                ('age_vehicle','>=','3'),
                                                                                                ('state','!=','usable')]"/>
                            <field name="state" widget="statubar" statubar_visible="broken, repaired, usable"/>
                        </group>
                    
                        <group name="group_column_right">
                            <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_list_vehicle" model="ir.ui.view">
        <field name="name">Vehicle list</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='usable'">
                <field name="model"/>
                <field name="immatriculation"/>
                <field name="state"/>
                <field name="date_purchased"/>
                <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                <field name="garage_city"/>
               </list>
               <field name="age_vehicle" avg="Moyenne d'Ã¢ge des voiture" />
               <field name="repairing_status" states="repaired"/>


        </field>

    </record>
    <record id="view_search_vehicle" model="ir.ui.view">
        <field name="name">Vehicle Filter</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
            <search>
                <field name="immatriculation"/>
                <field name="model"/>
                <filter name="filter_inactive" string="Inactive"
                        domain="[('active','=',False)]"/>
                <filter name="filter_active" string="Active"
                        domain="[('active','=',True)]"/>
            </search>
        </field>

    </record>
</odoo>